<div class="modal fade" id="dataAddModal" tabindex="-1" role="dialog" aria-labelledby="dataAdd"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="dataAddModal">Form Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="<%=url%>" method="post" id="category_form">
            <div class="card-body">
                <div class="form-group">
                    <label for="name">Name <strong class="asterisk">*</strong></label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" value="<%=data.name || ''%>">
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-outline-primary">Submit</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
    $(function () {
        $("#category_form").validate({
            rules: {
                name: {
                    required: true
                }
            },
            messages: {
                name: {
                    required: "Please enter a name"
                }
            }            
        })
    })
</script> 