<div class="row">
    <div class="col-md-12">
        <%-include("../message")%>
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Form Details</h3>
                </div>
                <form method="post" id="news_form"  enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="newsTitle">Title <strong class="asterisk">*</strong></label>
                            <input type="text" class="form-control" id="newsTitle" name="newsTitle" placeholder="Enter Title" value="<%=data.title || ''%>">
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="image">Image <strong class="asterisk">*</strong></label>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input single-image" id="image" name="image" accept="image/*">
                                        <label class="custom-file-label" for="image">Choose file</label>
                                    </div>
                                </div>
                                <div id="previewImage">
                                    <%if(data.image){%>
                                        <img src="<%=APPCONSTANT.SHOWNEWSPATH%><%=data.image%>" height="100">
                                    <%}%>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="content">Content <strong class="asterisk">*</strong></label>
                            <textarea class="form-control summernote-editor" placeholder="Enter Content" id="content" name="content"><%=data.content || ''%></textarea>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-outline-primary">Submit</button>
                        <a href="/v1/admin/manage_news" class="btn btn-default ml-2">Cancel</a>
                    </div>
                </form>
            </div>
    </div>
</div>

<script>
    $(function () {
        $("#news_form").validate({
            rules: {
                newsTitle: {
                    required: true
                },
                image: {
                    required: ("<%=data.image?false:true%>" == 'true')?true:false
                },
                content: {
                    required: true
                }
            },
            messages: {
                newsTitle: {
                    required: "Please enter a title"
                },
                image: {
                    required: "Please select a image"
                },
                content: {
                    required: "Please provide a content"
                }
            }            
        })
    })
</script>