<div class="row">
    <div class="col-md-12">
        <%-include("../message")%>
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Form Details</h3>
                </div>
                <form method="post" id="agent_form" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="name">Name <strong class="asterisk">*</strong></label>
                            <input type="text" class="form-control" id="name" name="name"
                                placeholder="Enter Name" value="<%=data.name || ''%>">
                        </div>
                        <div class="form-group">
                            <label for="email">Email <strong class="asterisk">*</strong></label>
                            <input type="text" class="form-control" id="email" name="email" placeholder="Enter Email" value="<%=data.email || ''%>">
                        </div>
                        <div class="form-group">
                            <label for="mobile">Mobile<strong class="asterisk">*</strong></label>
                            <input type="text" class="form-control" id="mobile" name="mobile" placeholder="Enter Mobile" value="<%=data.mobile || ''%>">
                        </div>
                        <div class="form-group">
                            <label for="password">Password <strong class="asterisk">*</strong></label>
                            <input type="password" class="form-control" id="password" name="password"placeholder="Enter Password" value="">
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="image">Image</label>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input multiple-image" id="image" name="image" accept="image/*" multiple>
                                        <label class="custom-file-label" for="image">Choose file</label>
                                    </div>
                                </div>
                                <div id="previewImage">
                                    <%if(data.image){%>
                                        <img src="<%=APPCONSTANT.SHOWAGENTIMAGEPATH%><%=data.image%>" height="100">
                                    <%}%>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-outline-primary">Submit</button>
                        <a href="/v1/admin/manage_agent" class="btn btn-default ml-2">Cancel</a>
                    </div>
                </form>
            </div>
    </div>
</div>

<script>
    $(function () {
        $("#agent_form").validate({
            rules: {
                name: {
                    required: true
                },
                email: {
                    required: true,
                    email: true
                },
                mobile: {
                    required: true,
                    number:true,
                    minlength: 10,
                    maxlength: 10
                },
                password:{
                    required: ("<%=data.password?false:true%>" == 'true') ? true : false,
                    minlength: 6
                }
            },
            messages: {
                name: {
                    required: "Please enter name"
                },
                email: {
                    required: "Please enter email",
                    email: "Please enter valid email",
                },
                mobile: {
                    required: "Please enter mobile",
                    number: "Mobile number should be in number",
                    minlength: "Mobile number should be in 10 digit",
                    maxlength: "Mobile number should be in 10 digit"
                },
                password:{
                    required: "Please enter password",
                    minlength: "Password length at least 6 character",
                }
            }
        })
    })
</script>